@using NewlyReadCore.SQLite 
@using NewlyReadCore.Tools
@{ 
    string title = ViewBag.Category;
    ViewBag.Title = title; 
}
<h1 class="center_h">@ViewBag.Category</h1>

<div class="stream_container"> 
    @foreach(var article in ViewBag.List){
        <a href="/Categories/Article/?url=@article.url" class="stream_card">
            <h4>@article.title</h4>
            <figure>
                <img src="@article.urlToImage"/>
                <figcaption>
                    <p>@ArrayTools.Truncate(article.description, 120)...</p>
                    <br/>
                    <p>@article.provider_name | @article.author @article.publishedAt</p>
                </figcaption>
            </figure>
        </a>
        <hr/>
    }
</div>